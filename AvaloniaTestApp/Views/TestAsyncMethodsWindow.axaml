<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="500"
  x:Class="AvaloniaTestApp.TestAsyncMethodsWindow"
  Icon="/Assets/avalonia-logo.ico"
  Title="Test Async Methods" Width="1000" Height="500" WindowStartupLocation="CenterOwner">

  <Grid Margin="10" RowDefinitions="*,Auto">
    <ListBox Grid.Row="0" Name="lbRows" />
    <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
      <StackPanel Grid.Column="0" Orientation="Horizontal">
        <Button Name="btnClearResults" Content="_Clear Results" Margin="0,10,0,0" MinWidth="80" 
          Click="btnClearResults_Click" />
        <Button Name="btnLoadAll" Content="Load _All" Margin="10,10,0,0" MinWidth="80" 
          Click="btnLoadAll_Click" />
        <Button Name="btnLoadByKey" Content="Load By _Key" Margin="10,10,0,0" MinWidth="80" 
          Click="btnLoadByKey_Click" />
        <Button Name="btnCRUDMethods" Content="C_RUD Methods" Margin="10,10,0,0" MinWidth="80" 
          Click="btnCRUDMethods_Click" />
        <Button Name="btnExecuteMethodQueryAsync" Content="_Execute Method Query" Margin="10,10,0,0"
          MinWidth="80" Click="btnExecuteMethodQueryAsync_Click" />
      </StackPanel>
      <Button Grid.Column="1" Content="Close" IsCancel="True" Margin="0,10,0,0" HorizontalAlignment="Right"
        MinWidth="80" Click="btnClose_Click" />
    </Grid>
  </Grid>
</Window>
